<h1>Artist Spotlight</h1>
<h2><%= @artist.name %>, <%= @artist.age%></h2>
<p><%=@artist.bio%></p>

<!-- think about maybe putting an input to edit here as well? -->

<form action="/artists" method="get">
  <input type="submit" value="Home">
</form>

<form action="/artists/<%= @artist.id %>/edit" method="get">
  <input type="submit" value="Edit">
</form>

<form action="/artists/<%= @artist.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
